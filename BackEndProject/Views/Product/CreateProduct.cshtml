@model Product

<div>
    <h1>New Product</h1>
    <div>
        <form method="post" action="CreateProduct" class="row" enctype="multipart/form-data">
            <div>
                <div hidden class="form-floating py-2 col-12">
                    <input asp-for="Id" class="form-control border-0 shadow" />
                    <label asp-for="Id" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" class="form-control border-0 shadow" />
                    <label asp-for="Quantity" class="ms-2"></label>
                </div>
            </div>
            <div>
                <input type="submit" asp-controller="Product" asp-action="CreateProduct" class="button_Create">Create/>
                    <a asp-controller="Product" asp-action="ListProduct" class="btn btn-outline-primary border form-control">
                    Back to List
                    </a>
            </div>
        </form>
    </div>
</div>