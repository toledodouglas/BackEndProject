@model IEnumerable<Client>

<div class="container">
    <h1 class="main_title">Client Control</h1>
    <div class="main_button">
        <a asp-controller="Client" asp-action="CreateClient" class="button_listCreated">Add new Client</a>
    </div>
    <div>
        @ViewData["Title"];
        <div class="main_managementBox">
            <div class="managementBox">
                @foreach (var Client in Model)
                {
                    <form method="post" class="row" enctype="multipart/form-data">
                        <input asp-for="@Client.Id" hidden />
                        <div class="menagementBox_List">
                            <h4 class="menagementBox_Name">@Client.Name</h4>
                            <p class="menagementBox_CPF">Descrição: @Client.CPF</p>
                            <p class="menagementBox_email">@Client.Email</p>
                            <p class="menagementBox_phoneNumber">@Client.CellPhone</p>
                            <p class="menagementBox_street">@Client.Street</p>
                            <p class="menagementBox_state">@Client.State</p>
                            <p class="menagementBox_city">@Client.City</p>
                            <div>
                                <button type="submit" asp-controller="Client" asp-action="RemoveClient" class="button_removed">Remove </button>
                                <a asp-controller="Client" asp-action="UniqueClient" asp-route-id="@Client.Id" class="button_removed">More Info</a>
                                <a asp-controller="Client" asp-action="EditClient" class="button_removed">Edit Product</a>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>